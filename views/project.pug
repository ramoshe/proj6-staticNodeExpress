extends layout.pug

block content

  nav.nav
    a(href='/')
      span &larr;
      |  Back

  article.portfolio-projects
    .inner-wrapper.flex-row-wrap.two-col
      .project-info-box.box

        h1= project.project_name

        p= project.description

      .project-tech-links-box.box
        h6 Technologies
        ul
          each tech in project.technologies
            li= tech

        a.btn-link(href=`${project.live_link}`) Live Demo
        a.btn-link(href=`${project.github_link}`) GitHub Repo

    .project-img-box.box

      each img in project.image_urls.slice(1)
        img.project-img(src=`/static/${img}`, alt=`Screenshot of ${project.project_name}`)

    nav.nav
      a(href='/')
        span &larr;
        |  Back
